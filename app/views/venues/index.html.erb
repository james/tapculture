<script type="text/javascript" charset="utf-8">
	$(document).ready( function() {
		initialize('<%= params[:location] %>');
		<% @venues.each do |venue| %>
			makeMarker({
			  position: new google.maps.LatLng(<%= venue.lat %>,<%= venue.lng %>),
			  content: "<strong><%= venue.name %></strong>",
			  title: "<%= venue.name %>"
			});
		<% end %>
	});
</script>
<div style="font-size: 20px; margin-bottom: 20px;">
	<p><a href="/student">&laquo; Back to profile</a> - You're at <strong>Guardian High</strong> at N1 9AG</p>
	<form action="" method="get">
		Show places near: <input type="text" name="location" style="padding: 5px 10px;" value="<%= params[:location] %>" size="30" />
		<input type="submit" class="button" value="Go" />
	</form>
</div>
	
<div style="float: left; width: 50%">
	<ul id="places">
	  <% @venues.each do |venue| %>
	    <li><%= link_to venue.name, venue_path(venue) %><br /><%= venue.address_1 %> <%= venue.post_code %> - <a href="#" class="fb">Create event</a></li>
	  <% end %>  
	</ul>
</div>
<div style="float: right; width: 50%">
	<div id="map_canvas" style="width:350px; height:400px"></div>
</div>